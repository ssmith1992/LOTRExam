@{
}

<form asp-controller="Character" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString" value="@ViewBag.keepSearch">
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="container">
    <div class="row">
    @foreach(var item in Model)
    {
      <div class="card col-12 col-sm-6 col-lg-3 col-xl-2">
        <img src="@Url.Content(item.ProfilePicture)" class="card-img-top" alt="...">
        <div class="card-body">
            <h4 class="card-title">@item.Name</h4>
            <h5 class="card-title">@item.races.Name</h5>
            <p class="card-text">@item.Description</p>
            <a asp-controller="Character" asp-action="deatails" asp-route-id="@item.CharacterId" class="btn btn-sm btn-primary">Details</a>
            <a class="btn btn-sm btn-primary" asp-controller="Character" asp-action="Edit" asp-route-id="@item.CharacterId">Edit</a>
            <a class="btn btn-sm btn-primary" asp-controller="Character" asp-action="Delete" asp-route-id="@item.CharacterId">Delete</a>
        </div>
        </div>
    }
    </div>
</div>
